<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hospital_appointment_form" model="ir.ui.view">
            <field name="name">hospital.appointment.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form> <!-- <form>create ="0" delete ="0" copy="0" edit="0" -->
                    <header>
                        <field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}" statusbar_visible="draft,in_consultation,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="priority" widget="priority" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id"/>
                                <field name="ref"/>
                                <field name="gender"/>
                                <field name="appointment_time"/>
                                <field name="booking_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string = "Prescription" name="prescription">
                                <field name="prescription" placeholder = "Entrez votre prescription"/>
                            </page>
                            <page string = "Pharmacie" name="pharmacy"></page>
                        </notebook>
                    </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>

            </field>
        </record>

        <record id="view_hospital_appointment_tree" model="ir.ui.view">
            <field name="name">hospital.appointment.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree>
                <!-- <tree create ="0" delete ="0" copy="0" edit="0">  -->
                    <field name="patient_id"/>
                    <field name="gender"/>
                    <field name="appointment_time"/>
                    <field name="booking_date"/>

                </tree>
            </field>
        </record>

        <record id="view_hospital_patient_search" model="ir.ui.view">
            <field name="name">hospital.patient.search</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <search>
                    <!-- <searchpanel>
                        <field name="gender" select="multi" enable_counters="1"/>
                    </searchpanel> -->
                </search>
            </field>
        </record>
        
        <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Rdv</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create your first appointment
              </p>
            </field>

        </record>

    </data> 
</odoo>
